{
  "extends": "airbnb",
  "rules": {
    "new-cap": [
      "error", {
        "capIsNewExceptionPattern": "^Promise\\..|^express\\.."
      }
    ],
    "consistent-return": 0,
    "max-len": [1, 2000, 2, { "ignoreComments": true}]
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}
